<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FabCommon">
        <item name="fab_size">mini</item>
        <item name="elevation">4dp</item>
        <item name="fab_colorRipple">@color/colorRipple</item>
    </style>

    <style name="FabStyleTransfer" parent="FabCommon">
        <item name="fab_colorNormal">@color/colorBlue700</item>
        <item name="fab_colorPressed">@color/colorBlue500</item>
    </style>

    <style name="FabStyleIncome" parent="FabCommon">
        <item name="fab_colorNormal">@color/colorGreen700</item>
        <item name="fab_colorPressed">@color/colorGreen500</item>
    </style>

    <style name="FabStyleExpenses" parent="FabCommon">
        <item name="fab_colorNormal">@color/colorRed700</item>
        <item name="fab_colorPressed">@color/colorRed500</item>
    </style>
</resources>
